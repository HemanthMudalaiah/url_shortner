<%- model_class = Url -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:base_url) %>:</strong></dt>
  <dd><%= @url.base_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_url) %>:</strong></dt>
  <dd><%= @url.short_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_value) %>:</strong></dt>
  <dd><%= @url.short_value %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              urls_path, :class => 'btn btn-default'  %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              url_path(@url),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
